SELECT *
FROM student;

SELECT *
FROM course;

SELECT
  firstName,
  lastName,
  courseName,
  credits,
  grade
FROM student
  INNER JOIN schedule ON student.SSN = schedule.SSN
  INNER JOIN course ON course.CRN = schedule.CRN
ORDER BY firstName, lastName;

DELETE FROM student
WHERE SSN = '00000000-0000-0000-0000-000000000000';

UPDATE student SET phone = '1234567899' WHERE SSN = '00000000-0000-0000-0000-000000000001';

SELECT *
FROM student;
