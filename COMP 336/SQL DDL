CREATE TABLE schedule (
  SSN   CHAR(36),
  CRN   CHAR(36),
  grade CHAR(1),
  PRIMARY KEY (SSN, CRN),
  FOREIGN KEY (SSN) REFERENCES student (SSN)
    ON DELETE CASCADE,
  FOREIGN KEY (CRN) REFERENCES course (CRN)
    ON DELETE CASCADE
);

